<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.thejakeofink.mountainviewgirlscamp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/girls_camp_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InitialPageActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".PhotoAlbumActivity"
            android:label="@string/title_activity_photo_album"/>
        <activity
            android:name=".PhotoActivity"
            android:label="@string/title_activity_photo">
        </activity>
    </application>

</manifest>
